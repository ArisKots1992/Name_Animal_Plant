<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.NoActionBar.TransparentNavigation.FullScreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Full Screen -->
    <style name="Theme.NoActionBar.TransparentNavigation.FullScreen" parent="Theme.NoActionBar.TransparentNavigation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Transparent Navigation and Status Bar -->
    <style name="Theme.NoActionBar.TransparentNavigation" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <!-- Font Management -->
    <style name="Font.Roboto.Thin" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Thin.ttf</item>
    </style>

    <style name="Font.Roboto.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="Font.Roboto.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="Font.Roboto.Black" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Black.ttf</item>
    </style>
</resources>
