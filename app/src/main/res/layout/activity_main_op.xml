<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1746e38"
    tools:context=".ui.MainActivity">


    <androidx.constraintlayout.widget.Placeholder
        android:id="@+id/placeholder"
        android:layout_width="157dp"
        android:layout_height="140.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/marioImage"
        android:layout_width="156.25dp"
        android:layout_height="140.5dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/mario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mickeyImage"
        android:layout_width="156.25dp"
        android:layout_height="140.5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/mickey"
        app:layout_constraintBottom_toTopOf="@+id/pikatsouImage"
        app:layout_constraintEnd_toEndOf="@+id/pikatsouImage"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pikatsouImage" />

    <ImageView
        android:id="@+id/pikatsouImage"
        android:layout_width="375dp"
        android:layout_height="337.2dp"
        android:layout_marginStart="8dp"
        android:src="@mipmap/pikatsu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41000003" />

    <ImageView
        android:id="@+id/liloImage"
        android:layout_width="156.25dp"
        android:layout_height="140.5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/lilo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/worioImage"
        android:layout_width="78.125dp"
        android:layout_height="70.25dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/worio"
        app:layout_constraintEnd_toEndOf="@+id/pikatsouImage"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pikatsouImage" />

    <ImageView
        android:id="@+id/idiotImage"
        android:layout_width="78.125dp"
        android:layout_height="70.25dp"
        android:layout_marginBottom="85dp"
        android:src="@mipmap/idiot"
        app:layout_constraintBottom_toBottomOf="@+id/liloImage"
        app:layout_constraintEnd_toEndOf="@+id/liloImage"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="@+id/liloImage" />

    <ImageButton
        android:id="@+id/fingerButton"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/fingerprint"
        app:layout_constraintBottom_toTopOf="@+id/marioImage"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/emptyView"
        android:layout_width="1dp"
        android:layout_height="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>